          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_sql",
              "operationId": "ExecutePassThroughNativeQuery_V2",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_sql"
            },
            "parameters": {
              "server": "default",
              "database": "icm$quantum$development",
              "query/query": "SELECT \n\t\t\tm.MemberId\n\t\t,\tf.FrameworkId\n\t\t,\ts.SupplierId\n\t\t,\tbocpl.ContractReferenceNumber\n\t\t,\tboc.ContractCRMId\n\t\t,\tboc.ContractStartDate\n\t\t,\tf.FrameworkName -- Should this be Framework Category?\n\t\t,\ts.SupplierName\n\t\t,   bocpl.PriceListICMId\n\t\t, bor.BasketOptimisationRequestStatusId\n\t\t,bor.OpimisationDate\n\t\t,bor.OptimisedBy,\n\t\tDATEADD(DAY, -28, DATEADD(MONTH, -3, DATEFROMPARTS(YEAR(GETDATE()), MONTH(ContractStartDate), DAY(ContractStartDate))))as test\n\t\tFROM [quantum$icm].BasketOptimiserContractPriceList bocpl\n\t\tJOIN [quantum$icm].BasketOptimiserContract boc\n\t\t\tON  bocpl.MemberGroupEntityICMId = boc.MemberGroupEntityICMId\n\t\t\tAND bocpl.SupplierGroupEntityICMId = boc.SupplierGroupEntityICMId\n\t\t\tAND bocpl.FrameworkGroupEntityICMId = boc.FrameworkGroupEntityICMId\n\t\t\tAND bocpl.ContractReferenceNumber = boc.ContractReferenceNumber\n\t\tJOIN [quantum$basket].MemberOrganisationEntity moe\n\t\t\tON bocpl.MemberGroupEntityICMId = moe.MemberOrganisationEntityICMId\n\t\tJOIN dbo.Member m\n\t\t\tON moe.MemberNumber = m.MemberNumber\n\t\tJOIN dbo.PriceList pl\n\t\t\tON bocpl.PriceListICMId = pl.PriceListId\n\t\tJOIN dbo.SupplierCatalogue sc\n\t\t\tON sc.SupplierCatalogueId = pl.SupplierCatalogueId\n\t\tJOIN dbo.Supplier s\n\t\t\tON sc.SupplierId = s.SupplierId\n\t\tJOIN dbo.Framework f\n\t\t\tON sc.FrameworkId = f.FrameworkId\n\t\t\tLEFT JOIN dbo.BasketOptimisationRequest bor\n\t\t\t   ON bor.PricelistId=bocpl.PriceListICMId\n\t\twhere   MONTH(DATEADD(DAY, -28, DATEADD(MONTH, -3, ContractStartDate))) = MONTH(GETDATE())\n    AND DAY(DATEADD(DAY, -28, DATEADD(MONTH, -3, ContractStartDate))) = DAY(GETDATE())\n     AND bocpl.IsActiveContractFlag = 1\n\n\t\t"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
